<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_major_accounts">
            <t t-call="web.html_container">
                <div class="page">
                    <div class="oe_structure"/>
                    <h2><span t-esc="company"/>: Trail Balance (<strong>Major Accounts</strong>)
                    </h2>
                    <h3>From:
                        <span t-esc="balance_start_date"/>
                        To:
                        <span t-esc="balance_date"/>
                        for
                        <u>
                            <span t-esc="type"/>
                        </u>
                        Transactions
                    </h3>
                    <h4>For:
                        <u>
                            <span t-esc="disp_acc_name"/>
                        </u>
                        , Up to:
                        <u>
                            <span t-esc="level_name"/>
                        </u>
                    </h4>
                    <table class="table table-bordered mb64" width="100%"
                           style="border: 1px solid black;border-collapse: collapse; width:100%;">
                        <thead>
                            <tr>
                                <th>
                                    <strong>Account Code</strong>
                                </th>
                                <th>
                                    <strong>Name</strong>
                                </th>
                                <th>
                                    <strong>Total Credit</strong>
                                </th>
                                <th>
                                    <strong>Total Debit</strong>
                                </th>
                                <th>
                                    <strong t-if="cr_dr_balance">Credit</strong>
                                    <strong>Balance</strong>
                                </th>
                                <th t-if="cr_dr_balance">
                                    <strong >Debit Balance</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <span t-foreach="docs" t-as="o">
                                <tr>
                                    <td>
                                        <span t-esc="str('---' * (o.level + 1))" style="color:white;"/><span>‚ä≥</span><span t-esc="o.complete_code"/>
                                    </td>
                                    <td style="text-align:center;">
                                        <span t-esc="o.description"/>
                                    </td>
                                    <td style="text-align:center;">
                                        <span t-esc="o.total_credit" t-esc-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/>
                                    </td>
                                    <td style="text-align:center;">
                                        <span t-esc="o.total_debit" t-esc-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/>
                                    </td>
                                    <td style="text-align:center;" t-if="cr_dr_balance">
                                        <span t-esc="o.credit_balance" t-esc-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/>
                                    </td>
                                    <td style="text-align:center;" t-if="not cr_dr_balance">
                                        <span t-esc="o.balance" t-esc-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/>
                                    </td>
                                    <td style="text-align:center;" t-if="cr_dr_balance">
                                        <span t-esc="o.debit_balance" t-esc-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/>
                                    </td>
                                </tr>
                                <div t-if="o.accounts and show_detail">
                                    <tr style="background-color: #9494b8;">
                                        <td colspan="2" >
                                            <strong>Account Code </strong>
                                        </td>
                                        <td colspan="2" >
                                            <strong>Name</strong>
                                        </td>
                                        <td >
                                            <strong>Balance</strong>
                                        </td>
                                        <td t-if="cr_dr_balance"></td>
                                    </tr>
                                    <tr t-foreach="o.accounts" t-as="ac" style="background-color: #CFCFDF;">
                                        <td colspan="2">
                                            <span t-esc="ac.code"/>
                                        </td>
                                        <td colspan="2">
                                            <span t-esc="ac.name"/>
                                        </td>
                                        <td>
                                            <span t-esc="ac.balance" t-esc-options='{"widget": "monetary", "display_currency": "ac.company_id.currency_id"}'/>
                                        </td>
                                        <td t-if="cr_dr_balance"></td>
                                    </tr>
                                </div>
                            </span>
                            <tr style="background-color: #8c8c8c;">
                                <td colspan="2">
                                    <strong>Total</strong>
                                </td>
                                <td>
                                    <strong><span t-esc="'{0:,.2f}'.format(float(cr_total))" /></strong>
                                </td>
                                <td>
                                    <strong><span t-esc="'{0:,.2f}'.format(float(dr_total))" /></strong>
                                </td>
                                <td t-if="cr_dr_balance">
                                    <strong><span t-esc="'{0:,.2f}'.format(float(cr_balance))" /></strong>
                                </td>
                                <td t-if="not cr_dr_balance">
                                    <strong><span t-esc="'{0:,.2f}'.format(float(dr_total - cr_total))" /></strong>
                                </td>
                                <td t-if="cr_dr_balance">
                                    <strong><span t-esc="'{0:,.2f}'.format(float(dr_balance))" /></strong>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                    <div class="oe_structure"/>
                </div>
            </t>
        </template>
    </data>
</odoo>
